{
    "name": "hellonico/image-factory",
    "type": "library",
    "authors": [
        {
            "name": "Nicolas Lemoine",
            "email": "dev@niconico.fr"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "intervention/image": "^2.7",
        "loophp/phposinfo": "^1.7",
        "spatie/image": "1.10.3",
        "symfony/filesystem": "^5.4 || ^6.0",
        "symfony/mime": "^5.4 || ^6.0",
        "symfony/process": "^5.4 || ^6.0",
        "symfony/string": "^5.4 || ^6.0",
        "twig/twig": "^2.4.4 || ^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^8.0 || ^9.0",
        "symplify/easy-coding-standard": "^9.2"
    },
    "autoload": {
        "psr-4": {
            "HelloNico\\ImageFactory\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HelloNico\\ImageFactory\\Test\\": "tests"
        }
    },
    "scripts": {
        "analyze": "vendor/bin/phpstan analyze",
        "lint": "vendor/bin/ecs check src --fix",
        "lint:fix": "vendor/bin/ecs check src --fix",
        "test": "vendor/bin/phpunit --testdox --colors=always"
    }
}
