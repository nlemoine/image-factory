{
    "name": "hellonico/image-factory",
    "type": "library",
    "authors": [
        {
            "name": "Nicolas Lemoine",
            "email": "dev@niconico.fr"
        }
    ],
    "require": {
        "spatie/image": "1.10.3",
        "symfony/mime": "^5.1",
        "symfony/process": "^5.2",
        "loophp/phposinfo": "^1.7",
        "twig/twig": "^2.4 || ^3.0",
        "jawira/case-converter": "^3.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.54",
        "phpunit/phpunit": "^8.0 || ^9.0",
        "symfony/filesystem": "^5.2",
        "vimeo/psalm": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "HelloNico\\ImageFactory\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HelloNico\\ImageFactory\\Test\\": "tests"
        }
    },
    "scripts": {
        "analyze": "vendor/bin/phpstan analyze",
        "fix": "php-cs-fixer fix --allow-risky=yes",
        "test": "vendor/bin/phpunit --testdox --colors=always"
    }
}
