{
    "name": "hellonico/image-factory",
    "type": "library",
    "authors": [
        {
            "name": "Nicolas Lemoine",
            "email": "nico.lemoine@gmail.com"
        }
    ],
    "require": {
        "league/glide": "dev-master as 1.7",
        "spatie/image": "^1.7",
        "symfony/mime": "^5.1",
        "symfony/process": "^5.2",
        "twig/twig": "^2.4 || ^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.54",
        "phpunit/phpunit": "^8.0 || ^9.0",
        "symfony/filesystem": "^5.2",
        "vimeo/psalm": "^4.1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "autoload": {
        "psr-4": {
            "HelloNico\\ImageFactory\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HelloNico\\ImageFactory\\Test\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "analyze": "vendor/bin/phpstan analyze",
        "fix": "php-cs-fixer fix tests",
        "test": "vendor/bin/phpunit --testdox --colors=always"
    }
}
